@VPATHOPT@=	@srcdir@
srcdir=		@srcdir@
prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=         @libdir@
INSTROOT=	@INSTROOT@
INSTALL=	@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
MKDIR=		@MKDIR@
CC=		@CC@
DEPTOOL=	@DEPTOOL@
INCLUDES=	-I. -I$(srcdir)/../kaffevm -I../../config -I$(srcdir)/../../config -I../../include -I$(srcdir)/../../include
CFLAGS=		@CFLAGS@
LDFLAGS=	@KAFFELINK@ @LDFLAGS@
ALL_CFLAGS=	$(CFLAGS) @KAFFEFLAGS@ $(INCLUDES) $(EXTRA_CFLAGS)
LIBS=		@NOSHAREDLIBS@
OBJEXT=		@OBJEXT@
EXEEXT=		@EXEEXT@

OBJECT=		main$(OBJEXT)
DEPENDS=	$(OBJECT:@OBJEXT@=.d)

all:		Kaffe$(EXEEXT)

Kaffe$(EXEEXT):	$(OBJECT) @KAFFE_LIBDEP@
		$(CC) $(ALL_CFLAGS) $(LDFLAGS) -o Kaffe$(EXEEXT) $(OBJECT) $(LIBS)

.c$(OBJEXT):
		$(CC) $(ALL_CFLAGS) -c $<

clean:
		rm -f $(LIB) Kaffe$(EXEEXT) Kaffe.core $(OBJECT)

distclean:	clean
		rm -f $(DEPENDS)
		rm -f Makefile
		rm -f .depend

install:
		test -d $(INSTROOT)$(bindir) || $(MKDIR) $(INSTROOT)$(bindir)
		$(INSTALL_PROGRAM) Kaffe$(EXEEXT) $(INSTROOT)$(bindir)/Kaffe$(EXEEXT)

derived-files:

.SUFFIXES:	.d

.c.d:
		$(DEPTOOL) $(ALL_CFLAGS) $< > $@

depend:	$(DEPENDS)
		rm -f .depend
		cat $(DEPENDS) > .depend

@INC_DEPEND@
